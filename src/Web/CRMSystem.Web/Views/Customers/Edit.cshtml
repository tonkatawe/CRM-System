
@using CRMSystem.Data.Models.Enums
@using CRMSystem.Web.ViewModels.Emails
@{
    this.ViewData["Title"] = "Edit Customer";

}
@model CRMSystem.Web.ViewModels.Customers.EditCustomerInputModel
<body id="page-top">
    <form style="padding-bottom: 7rem" method="post" asp-action="Edit" asp-controller="Customers">
        <div id="content-wrapper" class="d-flex flex-column">
            <div id="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-xl-6 col-lg-7">
                            <div class="card shadow mb-4">
                                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                                    <h6 class="m-0 font-weight-bold text-primary"> <b>Update contact</b> </h6>
                                    <div class="dropdown no-arrow">
                                        <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                                        </a>
                                        <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in" aria-labelledby="dropdownMenuLink">
                                            <a asp-action="Details" method="get" asp-route-id="@Model.Id" class="dropdown-item">Back to details</a>
                                            <a class="dropdown-item" href="#">Delete</a>
                                            <div class="dropdown-divider"></div>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label><b>First Name:</b></label>
                                        </div>
                                        <div class="col-md-6">
                                            <p>
                                                <input asp-for="FirstName" value="@Model.FirstName" class="rounded" />
                                                <span asp-validation-for="FirstName" class="text-danger"></span>
                                            </p>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label><b>Middle Name:</b></label>
                                        </div>
                                        <div class="col-md-6">
                                            <p>
                                                <input asp-for="MiddleName" value="@Model.MiddleName" class="rounded" />
                                                <span asp-validation-for="MiddleName" class="text-danger"></span>
                                            </p>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label><b>Last Name:</b></label>
                                        </div>
                                        <div class="col-md-6">
                                            <p>
                                                <input asp-for="LastName" value="@Model.LastName" class="rounded" />
                                                <span asp-validation-for="LastName" class="text-danger"></span>
                                            </p>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label><b>Industry:</b></label>
                                        </div>
                                        <div class="col-md-6">
                                            <p>
                                                <select asp-for="Industry" asp-items="Html.GetEnumSelectList<IndustryType>()" class="form-control"></select>
                                                <span asp-validation-for="Industry" class="text-danger"></span>
                                            </p>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label><b>Email</b></label>
                                        </div>
                                        <div class="col-md-6">
                                            @for (int i = 0; i < @Model.Emails.Count; i++)
                                            {
                                                <p>
                                                    <div class="form-row">
                                                        <div class="col-md-6">

                                                            <input asp-for="@Model.Emails[i].Email" value="@Model.Emails[i].Email" class="form-control" asp-route="@Model.Emails[i].Email" />

                                                            <input asp-for="@Model.Emails[i].Id" type="hidden" />
                                                            <input asp-for="@Model.Emails[i].Email" type="hidden" />
                                                            <span asp-validation-for="@Model.Emails[i].Email" class="text-danger"></span>
                                                        </div>
                                                        <div class="col-md-4">
                                                            <select asp-for="Emails[i].EmailType" asp-items="Html.GetEnumSelectList<EmailType>()" class="form-control"></select>
                                                        </div>
                                                        <a asp-action="Delete" asp-controller="Emails" asp-route-id="@Model.Emails[i].Id" asp-route-contactId="@Model.Emails[i].CustomerId">

                                                            <i class="fas fa-minus-circle" style="color: red"></i>
                                                        </a>
                                                    </div>
                                                </p>
                                            }

                                        </div>

                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label><b>Phone</b></label>
                                        </div>
                                        <div class="col-md-6">
                                            @for (int i = 0; i < @Model.Phones.Count; i++)
                                            {

                                                <p>
                                                    <div class="form-row">
                                                        <div class="col-md-6">

                                                            <input asp-for="Phones[i].Phone" asp-route="@Model.Phones[i].CustomerId" value="@Model.Phones[i].Phone" class="form-control" />
                                                            <input asp-for="@Model.Phones[i].CustomerId" type="hidden" />
                                                            <span asp-validation-for="Phones" class="text-danger"></span>

                                                        </div>
                                                        <div class="col-md-4">
                                                            <select asp-for="Phones[i].PhoneType" asp-items="Html.GetEnumSelectList<PhoneType>()" class="form-control"></select>
                                                        </div>
                                                        <a asp-action="Delete" asp-controller="Phones" asp-route-contactId="@Model.Id" asp-route-id="@Model.Phones[i].CustomerId">
                                                            <i class="fas fa-minus-circle" style="color: red"></i>
                                                        </a>
                                                    </div>
                                                </p>
                                            }

                                        </div>
                                    </div>
                                 <div class="row">
                                        <div class="col-md-6">
                                            <label><b>Profession</b></label>
                                        </div>
                                        <div class="col-md-6">
                                            <p>
                                                <input asp-for="JobTitle" value="@Model.JobTitle" />
                                                <span asp-validation-for="JobTitle" class="text-danger"></span>
                                            </p>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label><b>Address:</b></label>
                                        </div>
                                        <div class="col-md-6">
                                            <p>
                                                Country <br />
                                                <input asp-for="Address.Country" value="@Model.Address.Country" /><br />
                                                City<br />
                                                <input asp-for="Address.City" value="@Model.Address.City" /><br />
                                                Street<br />
                                                <input asp-for="Address.Street" value="@Model.Address.Street" /><br />
                                                Zip Code<br /><input asp-for="Address.ZipCode" value="@Model.Address.ZipCode" />
                                                <input asp-for="Address.Id" type="hidden" />
                                            </p>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label><b>Additional info:</b></label>
                                        </div>
                                        <div class="col-md-6">
                                            <p>
                                                <input asp-for="AdditionalInfo" value="@Model.AdditionalInfo" />
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                <input asp-for="@Model.Id" type="hidden" />

                                <button type="submit" class="btn btn-primary rounded-bottom">Save Changes</button> <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-danger rounded-bottom">Cancel</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </form>
</body>


@section Scripts
{
    <script>
        function showAddEmailForm() {
            $("#AddEmailForm").show();
            $("#addEmailLink").hide();

        }
        function cancelNewEmail() {
            $("#AddEmailForm").hide();
            $("#addEmailLink").show();

        }
    </script>
}
