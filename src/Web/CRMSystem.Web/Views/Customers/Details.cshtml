@using CRMSystem.Web.ViewModels.Phones
@model CRMSystem.Web.ViewModels.Customers.GetDetailsViewModel
@{
    this.ViewData["Title"] = "Get details";
 
}

<body id="page-top">
    <div id="content-wrapper" class="d-flex flex-column">
        <div id="content">

            <div class="container-fluid">
                <div class="row">
                    <div class="col-xl-6 col-lg-7">
                        <div id="EditPartial" style="display: none">

                            @await Html.PartialAsync("_EditContact", Model.SharedEditContactViewModel)
                        </div>
                        <div class="card shadow mb-4" id="CurrentContact">
                            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                                <h6 class="m-0 font-weight-bold text-primary"> <b>@Html.DisplayFor(m => m.TitleAsString).</b> <i>@Html.DisplayFor(m => m.FullName)</i></h6>
                                <div class="dropdown no-arrow">
                                    <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                                    </a>
                                    <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in" aria-labelledby="dropdownMenuLink">
                                        <a class="dropdown-item" href="#" onclick="editContact()">Edit</a>
                                        <a class="dropdown-item" href="#">Delete</a>
                                        <div class="dropdown-divider"></div>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <label><b>First Name:</b></label>
                                    </div>
                                    <div class="col-md-6">
                                        <p> @Html.DisplayFor(m => m.FirstName)</p>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <label><b>Middle Name:</b></label>
                                    </div>
                                    <div class="col-md-6">
                                        <p> @Html.DisplayFor(m => m.MiddleName)</p>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <label><b>Last Name:</b></label>
                                    </div>
                                    <div class="col-md-6">
                                        <p> @Html.DisplayFor(m => m.LastName)</p>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <label><b>Work in:</b></label>
                                    </div>
                                    <div class="col-md-6">
                                        <p> @Html.DisplayFor(m => m.IndustryAsString) Industry.</p>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <label><b>Email</b></label>
                                    </div>
                                    <div class="col-md-6">
                                        @foreach (var email in this.Model.EmailAddresses)
                                        {
                                            @if (email.EmailType.ToString() == "Home")
                                            {

                                                <p>
                                                    @email.Email
                                                    <i class="fas fa-home" title="Home"></i>

                                                    @*<a asp-action="Delete" asp-controller="Emails" asp-route-contactId="@Model.Id" asp-route-id="@email.Id">*@
                                                    <a href="#" onclick="del(@email.Id, @Model.Id)">
                                                        <i class="fas fa-minus-circle" style="color: red"></i>
                                                    </a>
                                                </p>

                                            }
                                            else if (email.EmailType.ToString() == "Work")
                                            {
                                                <p>
                                                    @email.Email <i class="fas fa-building" title="Work"></i>
                                                    <a asp-action="Delete" asp-controller="Emails" asp-route-contactId="@Model.Id" asp-route-id="@email.Id">
                                                        <i class="fas fa-minus-circle" style="color: red"></i>
                                                    </a>
                                                </p>
                                            }
                                        }
                                        @*<a href="#" onclick="showAddEmailForm()"><i class="fas fa-plus-circle" title="Add more emails">Add other email</i></a>
                                        <div id="AddEmailForm" style="display: none" class="form-row">
                                            @await Html.PartialAsync("_AddEmail", new EmailCreateInputModel() { ContactId = Model.Id })
                                        </div>*@
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <label><b>Phone</b></label>
                                    </div>
                                    <div class="col-md-6">
                                        @foreach (var phone in this.Model.PhoneNumbers)
                                        {

                                            @if (phone.PhoneType.ToString() == "Home")
                                            {

                                                <p>
                                                    @phone.Phone
                                                    <i class="fas fa-home" title="Home"></i>
                                                    <a asp-action="Delete" asp-controller="Phones" asp-route-contactId="@Model.Id" asp-route-id="@phone.Id">
                                                        <i class="fas fa-minus-circle" style="color: red"></i>
                                                    </a>
                                                </p>

                                            }
                                            else if (phone.PhoneType.ToString() == "Work")
                                            {
                                                <p>
                                                    @phone.Phone <i class="fas fa-building" title="Work"></i>
                                                    <a asp-action="Delete" asp-controller="Phones" asp-route-contactId="@Model.Id" asp-route-id="@phone.Id">
                                                        <i class="fas fa-minus-circle" style="color: red"></i>
                                                    </a>
                                                </p>
                                            }
                                            else if (phone.PhoneType.ToString() == "Mobile")
                                            {
                                                <p>
                                                    @phone.Phone
                                                    <i class="fas fa-mobile" title="Mobile"></i>
                                                    <a asp-action="Delete" asp-controller="Phones" asp-route-contactId="@Model.Id" asp-route-id="@phone.Id">
                                                        <i class="fas fa-minus-circle" style="color: red"></i>
                                                    </a>
                                                </p>
                                            }
                                            else if (phone.PhoneType.ToString() == "Fax")
                                            {
                                                <p>
                                                    @phone.Phone
                                                    <i class="fas fa-fax" title="Fax"></i>
                                                    <a asp-action="Delete" asp-controller="Phones" asp-route-contactId="@Model.Id" asp-route-id="@phone.Id">
                                                        <i class="fas fa-minus-circle" style="color: red"></i>
                                                    </a>
                                                </p>
                                            }

                                        }
                                        <a href="#" onclick="showAddPhoneForm()"><i class="fas fa-plus-circle" title="Add more phones">Add other phone</i></a>
                                        <div id="AddPhoneForm" style="display: none" class="form-row">
                                            @await Html.PartialAsync("_AddPhone", new PhoneCreateInputModel() { CustomerId = Model.Id })
                                        </div>

                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <label><b>Profession</b></label>
                                    </div>
                                    <div class="col-md-6">
                                        <p>@Html.DisplayFor(m => m.JobTitle)</p>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <label><b>Address:</b></label>
                                    </div>
                                    <div class="col-md-6">
                                        <p>@Html.DisplayFor(m => m.Address.Country), @Html.DisplayFor(m => m.Address.City), @Html.DisplayFor(m => m.Address.Street), @Html.DisplayFor(m => m.Address.ZipCode)</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>


                    @*@if (Model.Organization != null)
                    {
                        @await Html.PartialAsync("_GetOrganization", Model.Organization);

                    }
                    else
                    {
                        <p>Create join to organization or ad to oder organization and bla bla bla</p>
                    }*@
                </div>
            </div>
        </div>


        <!--Start under construction-->
        <div class="px-4 pt-3" id="EditButton"> <button type="button" class="btn btn-primary float-right" onclick="showAddOrganizationForm()"><i class="fa fa-plus"></i>&nbsp; Edit Contact</button> </div>
        <div class="clearfix"></div>


        <!--End under construction-->

        <p>
            <a asp-action="Index">Back to contacts</a>
        </p>

        <p>
            <a asp-action="Edit" asp-route-id="@Model.Id">Edit contact direct</a>
        </p>

    </div>
</body>
@section Scripts
{
    <script>
        function showAddPhoneForm() {
            $("#AddPhoneForm").show();
            $([document.documentElement, document.body]).animate({
                scrollTop: $("#AddPhoneForm").offset().top
            }, 1500);
        }
        function showAddEmailForm() {
            $("#AddEmailForm").show();
          
        }
        function cancel() {
            $("#AddEmailForm").hide();
        }
        function showAddOrganizationForm() {
            $("#EditPartial").show();
            $("#CurrentContact").hide();
            $("#EditButton").hide();
            $([document.documentElement, document.body]).animate({
                scrollTop: $("#AddOrganizationForm").offset().top
            }, 1500);
        }
        function editContact() {
            $("#CurrentContact").hide();
            $("#EditPartial").show();
        }
        function showCurrentContact() {
            $("#CurrentContact").show();
            $("#EditPartial").hide();
        }

        function del(id, contactId) {
         $.ajax({
                url: '/Emails/Delete',
                data: {
                    id: id,
                    contactId: contactId
                },
                contentType: 'application/json',
                success: function(data) {
                    console.log(data);
                    location.reload(true);
                },
                error: function(e) {
                    console.log(e);
                }
            });
        }

    </script>
}
