@using System.Globalization
@using CRMSystem.Data.Models
@model CRMSystem.Web.Infrastructure.PaginatedList<CRMSystem.Web.ViewModels.Customers.CustomerViewModel>
@{
    this.ViewData["Title"] = "All contacts";

}

<p>
    <a asp-action="Create" class="btn btn-primary btn-icon-split rounded-pill">
        <span class="icon text-white-50">
            <i class="fas fa-user-plus"></i>
        </span>
        <span class="text">Add New Customer</span>
    </a>
</p>

<form asp-action="Index" method="get">
    <div class="row">
        <p>
            Find by name: <input type="text" class="rounded-pill" name="SearchString" value="@ViewData["CurrentFilter"]" />
                          <button type="submit" class="btn btn-primary btn-icon-split rounded-pill btn-sm">
                              <span class="icon text-white-50">
                                  <i class="fas fa-search"></i>
                                  </span> 
                              <span class="text">Search</span>
            </button>
            <a asp-action="Index"  class="btn btn-info btn-icon-split rounded-pill btn-sm">
                <span class="icon text-white-50">
                    <i class="far fa-arrow-alt-circle-left"></i>
                    </span> 
                <span class="text">Back to full list</span>
            </a>
        </p>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["SortByName"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Full Name</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["SortByIndustry"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Industry</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["SortByDate"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Orders</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            var tm = "#myModal" + customer.Id;
            var mid = "myModal" + customer.Id;
            <tr>
                <td>
                    @customer.FullName
                </td>

                <td>
                    @customer.Industry
                </td>
                <td>
                    @if (customer.OrdersCount == 0)
                    {
                        <p>empty</p>
                    }
                    else
                    {
                        
                <a asp-action="History" asp-controller="Orders" asp-route-id="@customer.Id" asp-route-fullname="@customer.FullName" title="See history">
                    @customer.OrdersCount
                    </a>
                    }
</td>
                <td>
                    <a asp-controller="Orders" asp-action="Create" asp-route-id="@customer.Id" class="btn btn-primary btn-icon-split rounded-pill btn-sm">
                        <span class="icon text-white-50">
                            <i class="fas fa-plus"></i> 
                            </span>
                        <span class="text">Add Order</span>
                    </a> 
                    <a asp-action="Details" asp-route-id="@customer.Id" class="btn btn-info btn-icon-split rounded-pill btn-sm">
                        <span class="icon text-white-50">
                            <i class="fas fa-info"></i>
                        </span>
                        <span class="text">Details</span>
                    </a> 
                    <a asp-route-id="@customer.Id" data-toggle="modal"
                       data-target="#modal-delete" data-customerId="@customer.Id" class="btn btn-danger btn-icon-split rounded-pill btn-sm">
                        <span class="icon text-white-50">
                            <i class="fas fa-user-times"></i>  
                            </span>
                        <span class="text">Delete</span>
                    </a>

                    <form asp-action="Delete" role="form" id="myForm" >
                        <div class="modal fade" id="modal-delete" tabindex="-1" role="dialog" aria-labelledby="modalDeleteLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="modalDeleteLabel">Delete customer</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hcustomerIdden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="form-control">
                                        Are you sure you want to delete @customer.FullName?
                                        <input type="hidden" id="hiddenId" asp-for="@customer.Id"/>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary rounded-pill" data-dismiss="modal">Cancel</button>
                                        <button type="submit" asp-action="Delete" asp-route-id="@customer.Id" class="btn btn-danger rounded-pill" id="modalDeleteButton">Delete</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </td>

            </tr>
        }
    </tbody>
</table>

@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}


<ul class="pagination">
    
   <a asp-action="Index"
           asp-route-sortOrder="@ViewData["CurrentSort"]"
           asp-route-pageNumber="@(Model.PageIndex - 1)"
           asp-route-currentFilter="@ViewData["CurrentFilter"]"
           class="btn btn-default @prevDisabled">
        Previous
        </a>
        @for (var i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(Model.PageIndex == i ? "active" : string.Empty)">
                <a class="page-link" asp-route-pageNumber="@i">@i</a>
            </li>
        }
         <a asp-action="Index"
           asp-route-sortOrder="@ViewData["CurrentSort"]"
           asp-route-pageNumber="@(Model.PageIndex + 1)"
           asp-route-currentFilter="@ViewData["CurrentFilter"]"
           class="btn btn-default @nextDisabled">
       Next
        </a>
   
</ul>

@section Scripts
{
    <script>
        $(function () {
            $('#modal-delete').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget);
                var id = button.data("customerId");
                var modal = $(this);

                modal.find('#hiddenId').val(id);
            });

            $("#modalDeleteButton").click(function () {
                $("#myForm").submit();

            });

        });
    </script>
}
