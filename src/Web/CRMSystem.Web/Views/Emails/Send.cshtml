@model CRMSystem.Web.ViewModels.Emails.SendEmailViewModel

@{
    var emails = Model.Emails.Select(x => new SelectListItem(x.Email, x.Email));
}

<form method="post" asp-action="Send">

    <div class="form-group">
        <label asp-for="Email"></label>
        <select asp-for="Email" asp-items="emails" class="form-control"></select>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Subject"></label>
        <input asp-for="Subject" asp-items="emails" class="form-control" />
        <span asp-validation-for="Subject" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Content">Message</label>

        <textarea class="form-control" rows="4" asp-for="Content"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>

    </div>

    <div class="form-group">
        <div class="col-sm-10">
            <input id="submit" name="submit" type="submit" value="Send" class="btn btn-primary">
        </div>
    </div>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}