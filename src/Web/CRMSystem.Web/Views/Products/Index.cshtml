@model IEnumerable<CRMSystem.Web.ViewModels.Products.ProductViewModel>


<h1>
    <p style="text-align: center;">Your company have @Model.Count() products</p>
</h1>
<div class="container">
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-12 col-sm-8 col-md-6 col-lg-4">
                <div class="card">
                    <img class="card-img" src="https://s3.eu-central-1.amazonaws.com/bootstrapbaymisc/blog/24_days_bootstrap/vans.png" alt="Vans">
                    <div class="card-img-overlay d-flex justify-content-end">
                        <a asp-action="Edit" asp-route-id="@product.Id" class="card-link text-danger">
                            <i class="fas fa-pen" style="color: red" title="Edit this product"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@product.Id" class="card-link text-danger">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                    </div>

                    <div class="card-body">
                        <h4 class="card-title">@product.Name</h4>
                        <p class="card-text">
                            @product.Description
                        </p>
                        <h6 class="card-subtitle mb-2 text-muted">Quantity in storage: <b>@product.Quantity</b></h6>
                        <div class="buy d-flex justify-content-between align-items-center">
                            <div class="text-success"><h5 class="mt-4">@product.Price</h5></div>
                        </div>
                    </div>
                </div>
                <form asp-controller="SaleProducts" asp-action="Index" asp-route-id="@product.Id">
                    <button class="btn btn-danger mt-3" type="submit"><i class="fas fa-handshake"></i> Add to customer</button>
                </form>
            </div>
        }
    </div>
</div>