@model CRMSystem.Web.ViewModels.Products.EditProductInputModel
@{
    this.ViewData["Title"] = $"Edit {@Model.Name}";

}

<h3>@this.ViewData["Title"]</h3>
<div class="container">
    <form style="padding-bottom: 7rem" method="post" asp-action="Edit">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group col-md-3">
            <label asp-for="Name">Product name</label>
            <input asp-for="Name" value="@Model.Name" placeholder="Product name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group col-md-3">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" value="@Model.Description" class="form-control" placeholder="Please descripe your product" rows="3"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group col-md-3">
            <label asp-for="Price"></label>
            <input asp-for="Price" value="@Model.Price" class="form-control" placeholder="Price">
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-group col-md-3">
            <label asp-for="Quantity"></label>
            <input asp-for="Quantity" value="@Model.Quantity" class="form-control" placeholder="Price">
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>

        <button type="submit" id="btnSubmit" class="btn btn-primary">Save changes</button>
    </form>
</div>