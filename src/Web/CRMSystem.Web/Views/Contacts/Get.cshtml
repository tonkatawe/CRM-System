@using CRMSystem.Data.Models
@using CRMSystem.Web.ViewModels.Organizations
@model CRMSystem.Web.ViewModels.Contacts.GetDetailsViewModel
@{
    this.ViewData["Title"] = "Get details";

}
<h4><b>Details about:</b></h4>

<h5>
    <b>@Html.DisplayFor(m => m.TitleAsString).</b> <i>@Html.DisplayFor(m => m.FullName)</i>
</h5>
<h6>
    @this.Model.JobTitle
</h6>

<!--TODO: MAKE SALES AND EARNINGS-->
<p class="proile-rating">RANKINGS : <span>8/10</span></p>

<div class="col-md-8">
    <div class="tab-content profile-tab" id="myTabContent">
        <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">

            <div class="row">
                <div class="col-md-6">
                    <label><b>First Name:</b></label>
                </div>
                <div class="col-md-6">
                    <p> @Html.DisplayFor(m => m.FirstName)</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label><b>Middle Name:</b></label>
                </div>
                <div class="col-md-6">
                    <p> @Html.DisplayFor(m => m.MiddleName)</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label><b>Last Name:</b></label>
                </div>
                <div class="col-md-6">
                    <p> @Html.DisplayFor(m => m.LastName)</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label><b>Work in:</b></label>
                </div>
                <div class="col-md-6">
                    <p> @Html.DisplayFor(m => m.IndustryAsString) Industry.</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label><b>Email</b></label>
                </div>
                <div class="col-md-6">
                    @foreach (var email in this.Model.EmailAddresses)
                    {
                        <p>
                            @email.Email
                        </p>
                    }
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label><b>Phone</b></label>
                </div>
                <div class="col-md-6">
                    @foreach (var phone in this.Model.PhoneNumbers)
                    {
                        <p>
                            @phone.Phone
                        </p>
                    }
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label><b>Profession</b></label>
                </div>
                <div class="col-md-6">
                    <p>@Html.DisplayFor(m => m.JobTitle)</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label><b>Address:</b></label>
                </div>
                <div class="col-md-6">
                    <p>@Html.DisplayFor(m => m.Address.Country), @Html.DisplayFor(m => m.Address.City), @Html.DisplayFor(m => m.Address.Street), @Html.DisplayFor(m => m.Address.ZipCode)</p>
                </div>
            </div>
        </div>
    </div>
</div>
@if (Model.Organization != null)
{
    @await Html.PartialAsync("_GetOrganization", Model.Organization);

}


<a asp-action="Index">Back to contacts</a>
<a asp-action="Edit" asp-route-id="@Model.Id" data-toggle="modal"
   data-target="#modal-delete" data-id="@Model.Id">Edit contact</a>

<form asp-action="Edit" role="form" id="myForm" method="post">
    <div class="modal fade" id="modal-delete" tabindex="-1" role="dialog" aria-labelledby="modalDeleteLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalDeleteLabel">Delete contact</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="     form-horizontal">
                 @await Html.PartialAsync("_EditContact", Model);
                    <input hidden name="id" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-outline-primary" id="modalDeleteButton">Update Contact</button>
                </div>
            </div>
        </div>
    </div>
</form>


@section Scripts
{
    <script>
        $(function () {
            $('#modal-delete').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget);
                var id = button.data("id");
                var modal = $(this);

                modal.find('.modal-content input').val(id);
            });

            $("#modalDeleteButton").click(function () {
                $("#myForm").submit();

            });

        });
    </script>
}