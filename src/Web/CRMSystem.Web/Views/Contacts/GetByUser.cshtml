@model CRMSystem.Web.ViewModels.Contacts.GetAllContactsViewModel


<link href="~/vendor/fontawesome-free/css/fontawesome.min.css" rel="stylesheet" />
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="main-box clearfix">
                <div class="table-responsive">
                    <table id="dtBasicExample" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th><span>Name<i class="fas fa-sort"></i></span></th>
                                <th><span>Organization<i class="fas fa-sort"></i></span></th>
                                <th class="text-center"><span>Industry<i class="fas fa-sort"></i></span></th>
                                <th><span>Email</span></th>
                                <th>&nbsp;</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var contact in this.Model.Contacts)
                            {
                                <tr>
                                    <td>
                                        @(contact.FirstName +" "+ contact.LastName)
                                    </td>
                                    <td>
                                        @if (contact.Organization != null)
                                        {
                                            @contact.Organization.Name

                                        }
                                        else
                                        {
                                            <p>Add to organization</p>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <span class="label label-default">@contact.Industry.ToString()</span>
                                    </td>
                                    <td>
                                        @foreach (var email in contact.Emails)
                                        {
                                            <a href="#">@email.Email</a>
                                        }
                                    </td>




                                    <td style="width: 20%;">
                                        <a asp-controller="Contacts" asp-action="GetDetails" asp-route-contactId="@contact.Id" class="table-link">
                                            <span class="fa-stack">
                                                <i class="fas fa-info-circle" title="Info"></i>
                                            </span>
                                        </a>

                                        <a href="#" class="table-link">

                                            <span class="fa-stack">
                                                <i class="fas fa-user-edit" title="Edit"></i>
                                            </span>
                                        </a>



                                        <a asp-controller="Contacts" asp-action="Remove" asp-route-contactId="@contact.Id" class="table-link danger">
                                            <span class="fa-stack">
                                                <i class="fas fa-user-times" title="Remove Contact" data-placement="top"></i>
                                            </span>
                                        </a>

                                    </td>
                                </tr>
                            }
                            <nav>
                                <ul class="pagination justify-content-center">
                                    @if (this.Model.CurrentPage == 1)
                                    {
                                        <li class="page-item disabled">
                                            <a class="page-link" href="#">Previous</a>
                                        </li>
                                    }
                                    else
                                    {
                                        <li class="page-item">
                                            <a class="page-link"
                                               asp-route-page="@(this.Model.CurrentPage - 1)">Previous</a>
                                        </li>
                                    }

                                    @for (int i = 1; i <= this.Model.PagesCount; i++)
                                    {
                                        var active = i == this.Model.CurrentPage ? "active" : string.Empty;
                                        <li class="page-item @active">
                                            <a class="page-link"
                                               asp-route-page="@i">@i</a>
                                        </li>
                                    }

                                    @if (this.Model.CurrentPage == this.Model.PagesCount)
                                    {
                                        <li class="page-item disabled">
                                            <a class="page-link" href="#">Next</a>
                                        </li>
                                    }
                                    else
                                    {
                                        <li class="page-item">
                                            <a class="page-link"
                                               asp-route-page="@(this.Model.CurrentPage + 1)">Next</a>
                                        </li>
                                    }
                                </ul>
                            </nav>
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>

}