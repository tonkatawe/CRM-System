@model CRMSystem.Web.ViewModels.Contacts.GetAllContactsViewModel


<link href="~/vendor/fontawesome-free/css/fontawesome.min.css" rel="stylesheet" />
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="main-box clearfix">
                <div class="table-responsive">
                    <table class="table user-list">
                        <thead>
                            <tr>
                                <th><span>Name<i class="fas fa-sort"></i></span></th>
                                <th><span>Organization<i class="fas fa-sort"></i></span></th>
                                <th class="text-center"><span>Industry<i class="fas fa-sort"></i></span></th>
                                <th><span>Email</span></th>
                                <th>&nbsp;</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var contact in this.Model.Contacts)
                            {
                                <tr>
                                    <td>
                                        @(contact.FirstName +" "+ contact.LastName)
                                    </td>
                                    <td>
                                        @contact.Organization.Name
                                    </td>
                                    <td class="text-center">
                                        <span class="label label-default">@contact.Industry.ToString()</span>
                                    </td>
                                    <td>
                                        @foreach (var email in contact.Emails)
                                        {
                                            <a href="#">@email.Email</a>
                                        }
                                    </td>




                                    <td style="width: 20%;">
                                        <a asp-controller="Contacts" asp-action="GetDetails" asp-route-contactId="@contact.Id" class="table-link">
                                            <span class="fa-stack">
                                                <i class="fas fa-info-circle" title="Info"></i>
                                            </span>
                                        </a>
                                   
                                        <a href="#" class="table-link">

                                            <span class="fa-stack">
                                                <i class="fas fa-user-edit" title="Edit"></i>
                                            </span>
                                        </a>



                                        <a asp-controller="Contacts" asp-action="Remove" asp-route-contactId="@contact.Id" class="table-link danger">
                                            <span class="fa-stack">
                                                <i class="fas fa-user-times" title="Remove Contact" data-placement="top"></i>
                                            </span>
                                        </a>

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>
