@model CRMSystem.Web.ViewModels.Products.ProductViewModel


<div class="col-12 col-sm-8 col-md-6 col-lg-4">
    <div class="card">
        <img class="card-img justify-content-center" src="@Model.ImageUrl" alt="Vans">
        <div class="card-img-overlay d-flex justify-content-end">
            <a asp-action="Edit" asp-controller="Products" asp-route-id="@Model.Id" class="card-link text-danger">
                <i class="fas fa-pen" style="color: red" title="Edit this product"></i>
            </a>
            <a asp-action="Delete" asp-controller="Products" asp-route-id="@Model.Id" class="card-link text-danger">
                <i class="fas fa-trash-alt"></i>
            </a>
        </div>

        <div class="card-body">
            <h4 class="card-title">@Model.Name</h4>
            <p class="card-text">
                @Model.Description
            </p>
            <h6 class="card-subtitle mb-2 text-muted">Quantity in storage: <b>@Model.Quantity</b></h6>
            <div class="buy d-flex justify-content-between align-items-center">
                <div class="text-success"><h5 class="mt-4">@Model.Price</h5></div>
            </div>
        </div>
    </div>
             
</div>