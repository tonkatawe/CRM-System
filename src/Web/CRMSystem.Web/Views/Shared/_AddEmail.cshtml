@using CRMSystem.Data.Models.Enums
@model CRMSystem.Web.ViewModels.Emails.EmailCreateInputModel
<form asp-controller="Emails" asp-action="Add" method="post">
    <div class="form-row">
        <div class="form-group col-md-6">
            <input class="form-control" asp-for="Email" placeholder="Email">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <select asp-for="EmailType" asp-items="Html.GetEnumSelectList<EmailType>()" class="form-control" placeholder="type"></select>
            <span asp-validation-for="EmailType" class="text-danger"></span>
            <input asp-for="CustomerId" type="hidden" />
        </div>
        <input type="submit" value="&#xf0c7" class="fa-lg" style="color: blue">
        @*<a href="#" type="submit" class="hide"><i class="fas fa-save fa-lg" style="color: blue"></i></a>*@
        <a href="#" onclick=cancelNewEmail()>&nbsp;<i class="fas fa-window-close fa-lg" style="color: red"></i></a>

    </div>
</form>