@using CRMSystem.Data.Models
@model CRMSystem.Web.ViewModels.Contacts.EditContactInputModel




<h5>
    <select asp-for="Title" asp-items="Html.GetEnumSelectList<Title>()" class="form-control"></select>
    <span asp-validation-for="Title" class="text-danger"></span> <i>@Html.DisplayFor(m => m.FirstName)</i>
</h5>


<div class="col-md-8">
    <div class="tab-content profile-tab" id="myTabContent">
        <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">

            <div class="row">
                <div class="col-md-6">
                    <label><b>First Name:</b></label>
                </div>
                <div class="col-md-6">
                    @Model.FirstName <a asp-action="Edit" onclick="showAddCommentForm(@Model.FirstName)"><i class="fas fa-pencil-alt"></i></a>
                    <input asp-for="FirstName" class="form-control" placeholder="First Name" id="AddCommentForm" style="display: none">
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label><b>Middle Name:</b></label>
                </div>
                <div class="col-md-6">
                    <p> @Html.DisplayFor(m => m.MiddleName)</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label><b>Last Name:</b></label>
                </div>
                <div class="col-md-6">
                    <p> @Html.DisplayFor(m => m.LastName)</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label><b>Industry:</b></label>
                </div>
                <div class="col-md-6">
                    @*<p> @Html.DisplayFor(m => m.IndustryAsString) Industry.</p>*@
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label><b>Email:</b></label>
                </div>
                <div class="col-md-6">
                    @foreach (var email in this.Model.EmailAddresses)
                    {
                    <p>
                        @email.Email
                    </p>
                    }
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label><b>Phone:</b></label>
                </div>
                <div class="col-md-6">
                    @foreach (var phone in this.Model.PhoneNumbers)
                    {
                    <p>
                        @phone.Phone
                    </p>
                    }
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label><b>Job Title</b></label>
                </div>
                <div class="col-md-6">
                    <p>@Html.DisplayFor(m => m.JobTitle)</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label><b>Address:</b></label>
                </div>
                <div class="col-md-6">
                    <p>@Html.DisplayFor(m => m.Address.Country), @Html.DisplayFor(m => m.Address.City), @Html.DisplayFor(m => m.Address.Street), @Html.DisplayFor(m => m.Address.ZipCode)</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function showAddCommentForm(data) {
            $("#AddCommentForm input[name='ParentId']").val(data);
            $("#AddCommentForm").show();

        }


    </script>
}