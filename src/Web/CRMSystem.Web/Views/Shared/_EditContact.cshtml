
@using CRMSystem.Data.Models.Enums
@using CRMSystem.Web.ViewModels.Emails
@using CRMSystem.Web.ViewModels.Phones
@using System.Linq
@using CRMSystem.Data.Models
@using Microsoft.EntityFrameworkCore.Internal
@using Microsoft.EntityFrameworkCore.Metadata.Internal
@model CRMSystem.Web.ViewModels.Contacts.EditContactInputModel
<form style="padding-bottom: 7rem" method="post" asp-action="Edit">
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
            <h6 class="m-0 font-weight-bold text-primary">  <b>Update contact</b> </h6>
            <div class="dropdown no-arrow">
                <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                </a>
                <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in" aria-labelledby="dropdownMenuLink">
                    <a class="dropdown-item" href="#">Back to information</a>
                    <a class="dropdown-item" href="#">Delete</a>
                    <div class="dropdown-divider"></div>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <label><b>First Name:</b></label>
                </div>
                <div class="col-md-6">
                    <p>
                        <input asp-for="FirstName" value="@Model.FirstName" class="rounded" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label><b>Middle Name:</b></label>
                </div>
                <div class="col-md-6">
                    <p>
                        <input asp-for="MiddleName" value="@Model.MiddleName" class="rounded" />
                        <span asp-validation-for="MiddleName" class="text-danger"></span>
                    </p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label><b>Last Name:</b></label>
                </div>
                <div class="col-md-6">
                    <p>
                        <input asp-for="LastName" value="@Model.LastName" class="rounded" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label><b>Work in:</b></label>
                </div>
                <div class="col-md-6">
                    <p>
                        <select asp-for="Industry" asp-items="Html.GetEnumSelectList<IndustryType>()" class="form-control"></select>
                        <span asp-validation-for="Industry" class="text-danger"></span>
                    </p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label><b>Email</b></label>
                </div>
                <div class="col-md-6">
                    @for (int i = 0; i < @Model.EmailAddresses.Count; i++)
                    {
                        <div class="form-row">
                            <p>
                                <div class="col-md-6">
                                    <input asp-for="EmailAddresses[i].Email"  value="@Model.EmailAddresses[i].Email" class="form-control" />
                                    <span asp-validation-for="EmailAddresses" class="text-danger"></span>
                                </div>
                                <div class="col-md-4">
                                    <select asp-for="EmailAddresses[i].EmailType"  asp-items="Html.GetEnumSelectList<EmailType>()" class="form-control"></select>
                                </div>
                                <a asp-action="Delete" asp-controller="Emails" asp-route-contactId="@Model.EmailAddresses[i].ContactId">
                                    <i class="fas fa-minus-circle" style="color: red"></i>
                                </a>
                            </p>
                        </div>
                    }

                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label><b>Phone</b></label>
                </div>
                <div class="col-md-6">
                    @for (int i = 0; i < @Model.PhoneNumbers.Count; i++)
                    {
                        
                   <div class="form-row">
                            <p>
                                <div class="col-md-6">
                                  
                                    <input asp-for="PhoneNumbers[i].Phone" value="@Model.PhoneNumbers[i].Phone" class="form-control"/>
                                    <span asp-validation-for="PhoneNumbers" class="text-danger"></span>
                                </div>
                                <div class="col-md-4">
                                    <select asp-for="PhoneNumbers[i].PhoneType" asp-items="Html.GetEnumSelectList<PhoneType>()" class="form-control"></select>
                                </div>
                                <a asp-action="Delete" asp-controller="Phones" asp-route-contactId="@Model.Id" asp-route-id="@Model.PhoneNumbers[i].ContactId">
                                    <i class="fas fa-minus-circle" style="color: red"></i>
                                </a>
                            </p>
                        </div>
                    }

                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label><b>Profession</b></label>
                </div>
                <div class="col-md-6">
                    <p>
                        <input asp-for="JobTitle" value="@Model.JobTitle" />
                        <span asp-validation-for="JobTitle" class="text-danger"></span>
                    </p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label><b>Address:</b></label>
                </div>
                <div class="col-md-6">
                    <p>
                        Country <br />
                        <input asp-for="Address.Country" value="@Model.Address.Country" /><br />
                        City<br />
                        <input asp-for="Address.City" value="@Model.Address.City" /><br />
                        Street<br />
                        <input asp-for="Address.Street" value="@Model.Address.Street" /><br />
                        Zip Code<br /><input asp-for="Address.ZipCode" value="@Model.Address.ZipCode" />
                    </p>
                </div>
            </div>
        </div>
        <input asp-for="@Model.Id" type="hidden" />
        <button type="submit" class="btn btn-primary rounded-bottom">Save Changes</button>
    </div>
</form>
