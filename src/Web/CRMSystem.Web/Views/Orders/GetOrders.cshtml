@model CRMSystem.Web.Infrastructure.PaginatedList<CRMSystem.Web.ViewModels.Orders.OrderViewModel>
<p>
    <a asp-action="Create" asp-route-id="@ViewData["CustomerId"]">Add New Order</a>
</p>


<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="GetOrders" asp-route-sortOrder="@ViewData["SortByName"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Ordered date</a>
            </th>
            <th>
                <a asp-action="GetOrders" asp-route-sortOrder="@ViewData["SortByIndustry"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Product name</a>
            </th>
            <th>
                <a asp-action="GetOrders" asp-route-sortOrder="@ViewData["SortByDate"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Quantity</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {

            <tr>
                <td>
                    @order.OrderedDateAsString
                </td>

                <td>
                    @order.ProductName
                </td>
                <td>
                    @order.Quantity
                </td>


            </tr>
        }
    </tbody>
</table>

@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}


<ul class="pagination">

    <li>
        <a asp-action="GetOrders"
           asp-route-pageNumber="@(Model.PageIndex - 1)"
           class="btn @prevDisabled">
            Previous
        </a>
        @for (var i = 1; i <= Model.TotalPages; i++)
        {
        <li class="page-item @(Model.PageIndex == i ? "active" : string.Empty)">
            <a class="page-link" asp-route-pageNumber="@i">@i</a>
        </li>
    }
        <a asp-action="GetOrders"
           asp-route-pageNumber="@(Model.PageIndex + 1)"
           class="btn  @nextDisabled">
            Next
        </a>
        </li>
    </ul>