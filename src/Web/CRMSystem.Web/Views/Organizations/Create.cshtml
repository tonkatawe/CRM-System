@using CRMSystem.Data.Models.Enums
@model CRMSystem.Web.ViewModels.Organizations.OrganizationCreateInputModel

@{
    this.ViewData["Title"] = "Join your company";
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-xl-8 col-lg-8 col-md-9 ">
            <div class="card o-hidden border-0 shadow-lg my-1">
                <div class="card-body p-0">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">Join your company</h1>
                                </div>
                                <form class="user" asp-action="Create" method="post">
                                    <div asp-validation-summary="All" class="text-danger"></div>
                                    <div class="form-group">
                                        <input asp-for="Name" class="form-control form-control-user" placeholder="Name">
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <select asp-for="Industry" asp-items="Html.GetEnumSelectList<IndustryType>()" class="selectBox"><option disabled selected>--Select your industry type--</option></select>
                                        <span asp-validation-for="Industry" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <textarea asp-for="Description" class="form-control form-control-user" rows="3" placeholder="Company's description"></textarea>
                                        <span asp-validation-for="Description" class="text-danger"></span>
                                    </div>
                                    <div class="row d-flex justify-content-center font-weight-bold">
                                        <div class="form-control-user">
                                            <input asp-for="IsPublic" type="radio" value="true" class="custom-radio">
                                            <label class="custom-radio">Public company</label>
                                        </div>
                                        <div class="form-control-user">
                                            <input asp-for="IsPublic" type="radio" value="false">
                                            <label class="custom-radio">Non public company</label>
                                        </div>
                                        <span asp-validation-for="IsPublic" class="text-danger"></span>
                                    </div>
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Address</h1>
                                    </div>
                                    <div class="form-group">
                                        <input asp-for="Address.Country" class="form-control form-control-user" placeholder="Country">
                                        <span asp-validation-for="Address.Country" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <input asp-for="Address.City" class="form-control form-control-user" placeholder="City">
                                        <span asp-validation-for="Address.City" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <input asp-for="Address.Street" class="form-control form-control-user" placeholder="Street">
                                        <span asp-validation-for="Address.Street" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <input asp-for="Address.ZipCode" class="form-control form-control-user" placeholder="Zip code">
                                        <span asp-validation-for="Address.ZipCode" class="text-danger"></span>
                                    </div>

                                    <button type="submit" class="btn btn-primary btn-user btn-block">
                                        Join your company
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

