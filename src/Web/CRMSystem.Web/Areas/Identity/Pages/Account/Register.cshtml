@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container">

    <div class="row justify-content-center">
        <div class="col-xl-8 col-lg-8 col-md-9 ">
            <div class="card o-hidden border-0 shadow-lg my-1">
                <div class="card-body p-0">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">Create an Account!</h1>
                                </div>
                                <form class="user" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                    <div asp-validation-summary="All" class="text-danger"></div>
                                    <div class="form-group">
                                        <label asp-for="Input.UserName"></label>
                                        <input asp-for="Input.UserName" class="form-control form-control-user" placeholder="Username" />
                                        <span asp-validation-for="Input.UserName" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Input.Email"></label>
                                        <input asp-for="Input.Email" class="form-control form-control-user" placeholder="Email Address" />
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                     <label  id="inputGroupFileAddon01">Profile Picture(optional):</label>
                                        <div class="custom-file form-group rounded-pill">
                                            <input type="file" accept="image/*" asp-for="Input.PictureFile" class="custom-file-input rounded-pill" id="inputGroupFile01"
                                                   aria-describedby="inputGroupFileAddon01">
                                            <label class="custom-file-label rounded-pill" for="inputGroupFile01">Choose image</label>
                                            <span asp-validation-for="Input.PictureFile" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-sm-6 mb-3 mb-sm-0">
                                            <label asp-for="Input.Password"></label>
                                            <input asp-for="Input.Password" class="form-control form-control-user" placeholder="Password" />
                                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                                        </div>
                                        <div class="col-sm-6">
                                            <label asp-for="Input.ConfirmPassword"></label>
                                            <input asp-for="Input.ConfirmPassword" class="form-control form-control-user" placeholder="Repeat Password" />
                                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                        </div>
                                    </div>
                              <button type="submit" class="btn btn-primary btn-user btn-block">
                                        Register Account
                                    </button>
                                    <hr>
                                    <a href="index.html" class="btn btn-google btn-user btn-block">
                                        <i class="fab fa-google fa-fw"></i> Register with Google
                                    </a>
                                    <a href="index.html" class="btn btn-facebook btn-user btn-block">
                                        <i class="fab fa-facebook-f fa-fw"></i> Register with Facebook
                                    </a>
                                </form>
                                <hr>
                                <div class="text-center">
                                    <a class="small" asp-page="./ForgotPassword" id="forgot-password">Forgot Password?</a>
                                </div>
                                <div class="text-center">
                                    <a class="small" asp-page="./Login">Already have an account? Login!</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
